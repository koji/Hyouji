{
  "name": "hyouji",
  "version": "0.0.16",
  "description": "Hyouji (表示) — A command-line tool for organizing and displaying GitHub labels with clarity and harmony.",
  "main": "dist/index.js",
  "author": "koji <baxin1919@gmail.com>",
  "homepage": "https://github.com/koji/Hyouji",
  "bin": {
    "hyouji": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koji/Hyouji.git"
  },
  "license": "MIT",
  "keywords": [
    "github labels manager",
    "github labels",
    "labels api",
    "github",
    "labels",
    "hyouji",
    "cli",
    "表示",
    "Hyouji(表示)",
    "JSON",
    "yaml",
    "yml"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:error-handling": "node tests/scripts/error-handling/run-all.cjs",
    "test:config": "node tests/scripts/config/run-all.cjs",
    "test:integration": "node tests/scripts/run-integration.cjs",
    "test:auto-detection": "node tests/integration/auto-detection/integration-flow.cjs",
    "test:verification": "node tests/scripts/verification/run-all.cjs",
    "test:all-custom": "npm run test:error-handling && npm run test:config && npm run test:integration && npm run test:verification",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "cov:send": "run-s cov:lcov && codecov",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@octokit/core": "^7.0.6",
    "chalk": "^5.6.2",
    "oh-my-logo": "^0.3.2",
    "prompts": "^2.4.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.8"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "type": "module"
}
